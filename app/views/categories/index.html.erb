<h1 class="page-headline categories-headline">All Categories...</h1>
<% @categories.each do |category| %>
  <ul>
    <div class="row">
      <div class="col-6 offset-3 category-bg">
        <li class="category-title">
          <%= link_to "#{category.name}", category_path(category), class:"category-text" %>
        </li>
      </div>
    </div>
  </ul>
<% end %>
<div >
  <%= will_paginate(@things, :renderer => WillPaginate::ActionView::Bootstrap4LinkRenderer) %>
</div>

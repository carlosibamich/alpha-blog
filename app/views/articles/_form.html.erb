<%= render 'shared/errors', obj: @article %>

<div class="row">
  <div class="col-sm-12">
    <%= form_for @article do |f| %>
      <div class="form-group">
        <div class="control-label col-sm-2 offset-sm-1">
          <%= f.label :title, class:"f-label" %>
        </div>
        <div class="col-sm-10 offset-sm-1">
          <%= f.text_field :title, class:"form-control", placeholder:"Title of article", autofocus: true %>
        </div>
      </div><!-- end form-group -->
      <div class="form-group">
        <div class="control-label col-sm-2 offset-sm-1">
          <%= f.label :body, class:"f-label" %>
        </div>
        <div class="col-sm-10 offset-sm-1">
          <%= f.text_area :body, rows: 10, class:"form-control", placeholder:"Body of article" %>
        </div>
      </div><!-- end form-group -->
      <div class="form-check form-check-inline">
        <div class="row">
          <div class="col-sm-12 checkbox-box">
            <%= f.collection_check_boxes :category_ids, Category.all, :id, :name do |cb| %>
              <% cb.label(class:"form-check-label checkbox-spacing") {cb.check_box(class:"form-check-input") + cb.text } %>
            <% end %>
          </div>
        </div>
      </div><!-- end form-group -->
      <div class="form-group">
        <div class="col-sm-8">
          <%= f.submit class:"btn btn-lg buttn"%>
        </div>
      </div><!-- end form-group -->
    <% end %>
    <div class="col-sm-4 offset-sm-4 cancel-request">
      [ <%= link_to 'Cancel request and return to Articles Listing', articles_path %> ]
    </div>
  </div><!-- end col-sm-12 -->
</div><!-- end row -->

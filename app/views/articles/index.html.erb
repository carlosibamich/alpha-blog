<h1 class="page-headline">Articles Listing</h1>

<% @articles.each do |article| %>
  <section class="row article-bg">
    <div class="col-10 offset-1">
      <div class="article-title">
        <%= link_to article.title, article_path(article), class:"title-text" %>
      </div>
      <div class="article-body">
        <%= truncate(article.body, length: 100) %>
      </div>
      <small class="article-meta-details">
        Created by: <%= article.user.username if article.user %>,
        <%= time_ago_in_words(article.created_at) %> ago &nbsp;
        last updated: <%= time_ago_in_words(article.updated_at) %> ago
      </small>
      <div class="col-6 offset-3 link-ops">
        <%= link_to 'Edit this Article', edit_article_path(article) %> &nbsp; &nbsp;
        <%= link_to 'Delete this article', article_path(article), method: :delete, data: {confirm: 'Are you sure you want to delete the article?'} %>
      </div>
    </div><!-- end cols -->
  </section><!-- end row -->
<% end %>

<br>

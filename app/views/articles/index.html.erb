<h1>Listing All Articles</h1>

<p>
  <%= link_to 'Create new article', new_article_path %>
</p>

<table>
  <tr>
    <th>Title</th>
    <th>Body</th>
  </tr>

  <% @articles.each do |content| %>
    <tr>
      <td><%= content.title %></td>
      <td><%= content.body %></td>
      <td><%= link_to 'Edit', edit_article_path(content) %></td>
      <td><%= link_to 'Show', article_path(content) %></td>
      <td><%= link_to 'Destroy', article_path(content), method: :delete, data: { confirm: "Are you sure?" } %></td>
    </tr>
  <% end %>

</table>
<br>
<%= link_to 'Home Page', root_path %>

<h1 class="page-headline">Log in</h2>

<%= form_for(:session, url: login_path) do |f| %>
  <div class="form-group">
    <div class="control-label col-sm-2 offset-sm-1">
      <%= f.label :email, class:"f-label" %>
    </div>
    <div class="col-sm-10 offset-sm-1">
      <%= f.email_field :email, class:"form-control", placeholder:"Enter email", autofocus: true %>
    </div>
  </div><!-- end form-group -->
  <div class="form-group">
    <div class="control-label col-sm-2 offset-sm-1"
      <%= f.label :password, class:"f-label" %><br>
    </div>
    <div class="col-sm-10 offset-sm-1">
      <%= f.password_field :password, class:"form-control", autocomplete: "off" %>
    </div>
  </div><!-- end form-group -->
  <div class="form-group">
    <div class="col-sm-8 offset-sm-1">
      <%= f.submit "Log in", class:"btn btn-lg" %>
    </div>
  </div><!-- end form-group -->
<% end %>
<div class="col-sm-4 offset-sm-4">
  [ <%= link_to 'Cancel request and return to Articles Listing', articles_path %> ]
</div>

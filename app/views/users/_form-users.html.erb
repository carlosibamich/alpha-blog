<%= render 'shared/errors', obj: @user %>

<div class="row">
  <div class="col-sm-12">
    <%= form_for @user do |f| %>
      <div class="form-group">
        <div class="control-label col-sm-2 offset-sm-1"
          <%= f.label :username, class:"f-label" %>
        </div>
        <div class="col-sm-10 offset-sm-1">
          <%= f.text_field :username, class:"form-control", placeholder:"Enter username", autofocus: true %>
        </div>
      </div><!-- end form-group -->
      <div class="form-group">
        <div class="control-label col-sm-2 offset-sm-1"
          <%= f.label :email, class:"f-label" %><br>
        </div>
        <div class="col-sm-10 offset-sm-1">
          <%= f.email_field :email, class:"form-control", placeholder:"Enter email" %>
        </div>
      </div><!-- end form-group -->
      <div class="form-group">
        <div class="control-label col-sm-2 offset-sm-1"
          <%= f.label :password, class:"f-label" %><br>
        </div>
        <div class="col-sm-10 offset-sm-1">
          <%= f.password_field :password, class:"form-control", placeholder:"Enter password" %>
        </div>
      </div><!-- end form-group -->
      <div class="form-group">
        <div class="col-sm-8 offset-sm-1">
          <%= f.submit(@user.new_record? ? "Sign up" : "Update Account", class:"btn btn-lg") %>
        </div>
      </div><!-- end form-group -->
    <% end %>
    <div class="col-sm-4 offset-sm-4">
      [ <%= link_to 'Cancel request and return to Articles Listing', articles_path %> ]
    </div>
  </div><!-- end col-sm-12 -->
</div><!-- end row -->
